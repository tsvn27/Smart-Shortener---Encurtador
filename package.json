{
  "name": "smart-shortener",
  "version": "1.0.0",
  "description": "Plataforma inteligente de encurtamento de links",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:all": "concurrently \"npm run dev\" \"pnpm --dir frontend dev\"",
    "build": "tsc && cd frontend && pnpm build",
    "start": "node dist/server.js",
    "seed": "tsx src/db/seed.ts",
    "install:all": "npm install && cd frontend && pnpm install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "geoip-lite": "^1.4.7",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.21.0",
    "nanoid": "^5.0.4",
    "nodemailer": "^7.0.12",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "ua-parser-js": "^1.0.37",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
